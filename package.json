{
  "name": "express-drizzle",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "start": "NODE_ENV=production node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx command/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx command/seed.ts",
    "db:reset": "tsx command/reset.ts",
    "db:fresh": "npm run db:reset && npm run db:migrate && npm run db:seed",
    "prepare": "husky",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:migrate": "npx @eslint/migrate-config .eslintrc.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "i": "^0.3.7",
    "joi": "^18.0.1",
    "mysql2": "^3.14.5",
    "npm": "^11.6.1",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint:fix",
      "npm run test -- --bail --findRelatedTests"
    ]
  }
}
